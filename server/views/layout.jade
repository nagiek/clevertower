html(lang="en")
  head(prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# clevertower: http://ogp.me/ns/fb/clevertower#")

    title CleverTower

    // Metatags
    meta(charset='utf-8')
    meta(content="width = device-width,initial-scale = 1.0,maximum-scale = 1.0", name="viewport")
    meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
    
    // Links
    link(rel="shortcut icon", type="image/vnd.microsoft.icon", href="/favicon.ico")
    link(rel="apple-touch-icon", type="image/png", href="/img/apple/apple-touch-icon.png")
    link(rel="apple-touch-icon", type="image/png", href="/img/apple/apple-touch-icon-ipad.png", sizes="72x72")
    link(rel="apple-touch-icon", type="image/png", href="/img/apple/apple-touch-icon-iphone4.png", sizes="114x114")
    link(type="text/css", rel="stylesheet", href="//fonts.googleapis.com/css?family=Rokkitt:regular&amp;subset=latin", media="all")

    // Facebook
    meta(property='fb:app_id', content='387187337995318')
    meta(property='og:description', content='CleverTower is a startup on a mission to change the way you live, and the way you manage property. Thanks for stopping by.')
    meta(property='og:url', content='clevertower.com')
    meta(property='og:image', content='/img/logos/logo-200.png')
    meta(property='og:type', content='website')
    meta(property='og:site_name', content='CleverTower')
    
    // Only script we need
    script(type="text/javascript", src="/js/app/config/init.js")
    
    // Le HTML5 shim, for IE6-8 support of HTML5 elements
    //if lt IE 9
      script(src="//html5shiv.googlecode.com/svn/trunk/html5.js")
    
  body
    #frame

      #panel.menu.collapse.width
        .collapse-inner
          ul#panel-nav-menu.nav
            li#panel-home-nav.home-nav
              a(href="/outside") Outside
            li#panel-network-nav.network-nav
              a(href="/inside") Inside

          ul#panel-user-menu.nav.position-bottom
            li
              a#panel-login-link.login-link(href="/account/login") Login
            li
              a#panel-signup-link.signup-link(href="/account/signup") Sign up

      #view

        header(data-role='header', role="navigation")
          .navbar.navbar-fixed-top
            .navbar-inner
              .container
                button.btn.btn-navbar(data-target="#panel", data-toggle="collapse")
                  span.icon-bar
                  span.icon-bar
                  span.icon-bar
                a.brand(href="/", title="Home")
                  img(src="/img/logo/logo.png", alt="logo")
                ul#primary-nav.nav.phone-hidden.tablet-hidden
                  li#home-nav.home-nav
                    a(href="/outside") Outside
                  li#network-nav.network-nav
                    a(href="/inside") Inside
                button.btn.stay-right.desktop-hidden(data-target="#search-menu", data-toggle="collapse")
                  i.icon.icon-search
                  b.caret
                ul#user-menu.nav.stay-right
                  li
                    a#login-link(href="#") Login
                  li.phone-hidden
                    a#signup-link(href="#") Sign up
                #search-menu.nav-collapse.collapse.height.pull-left
                  form.form-search.navbar-search
                    .controls
                      .input-append.stay-right
                          button.btn(type="submit", rel="tooltip", data-original-title="Search")
                            i.icon.icon-search
                      .input-append.bar-append
                        input.input-block-level.typeahead.search.search-query(type="text", name="q", placeholder="Search", autocomplete="off", spellcheck="false", dir="auto")

        // Branding
        #brand-strip.hide

        // Messages
        #messages.container

        // Facebook root.
        #fb-root

        // Page wrapper
        #page.page(data-role='page')

          // Main
          #main.main
            block content

          // Full-page modal, for wizards
          // #full-modal.hide.main
              
          // Footer
          footer.footer(data-role='footer')
            .navbar.navbar-fixed-bottom
              .container
                p
