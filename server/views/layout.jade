      #primary-nav.navbar.navbar-fixed-top
        .navbar-inner
          .container
            button.btn.btn-navbar(data-target=".nav-collapse", data-toggle="collapse")
              span.icon-bar
              span.icon-bar
              span.icon-bar              
            a.brand(href="/", title="Home")
              img(src="/img/logo/logo.png", alt="logo")
            ul.nav#domain-menu
              li#home-nav
                a(href="/search") Explore
              li#network-nav
            .nav-collapse.collapse
              ul.nav#search-menu
              ul.nav.pull-right#user-menu

    // Branding
    #brand-strip.hide

    // Messages
    #messages.container

    // Facebook root.
    #fb-root

