        </label>
        <label for="property-wheelchair" class="checkbox">
          <input type="checkbox" name="property[wheelchair]" id="property-wheelchair" <%= property.wheelchair ? checked="checked" : '' %>><%= i18nProperty.fields.wheelchair %>
        </label>          
      </div>
    </div>
  </div>
</fieldset>

<hr>

