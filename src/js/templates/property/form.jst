        </label>
        <label for="property-laundry" class="checkbox">
          <input type="checkbox" name="property[laundry]" id="property-laundry" <%= property.laundry ? checked="checked" : '' %>><%= i18nProperty.fields.laundry %>
        </label>
        <label for="property-indoor_parking" class="checkbox">
