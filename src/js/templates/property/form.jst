<fieldset>
  <!-- <legend><%= i18nProperty.form.building %></legend> -->
  <div class="row">
    <div id="profile-name-group" class="form-group col-sm-5">
      <label for="profile-name" class="control-label"><%= i18nCommon.fields.title %></label>
      <input type="text" name="profile[name]" id="profile-name" class="form-control" value="<%= profile.name %>">
    </div>
    <div class="form-group col-sm-3">
      <label for="property-email" class="control-label"><%= i18nProperty.fields.property_type.label %></label>
      <select name="property[property_type]" id="property-property_type" class="form-control">
        <option value="" ><%= i18nCommon.form.select.select_value %></option>
        <option value="1" <%= property.property_type == 1 ? 'selected="selected"' : ''  %>><%= i18nProperty.fields.property_type.condo %></option>
        <option value="2" <%= property.property_type == 2 ? 'selected="selected"' : ''  %>><%= i18nProperty.fields.property_type.apartment %></option>
      </select>
    </div>
    <div class="form-group col-xs-6 col-sm-2">
      <label for="property-year" class="control-label"><%= i18nProperty.fields.year %></label>
      <input type="number" name="property[year]" id="property-year" class="form-control" maxlength="4" <%= property.description ? 'value="' + property.description + '"' : ''  %>>
    </div>
    <div class="form-group col-xs-6 col-sm-2">
      <label for="property-mls" class="control-label"><%= i18nProperty.fields.mls %></label>
      <input type="text" name="property[mls]" id="property-mls" class="form-control" <%= property.description ? 'value="' + property.description + '"' : ''  %>>
    </div>
  </div>
</fieldset>

<hr>

<fieldset>
  <!-- <legend><%= i18nProperty.form.marketing %></legend> -->
