    <div class="form-group col-md-5">
      <label for="profile-bio" class="control-label"><%= i18nProperty.fields.description %></label>
      <textarea rows="6" name="profile[bio]" id="profile-bio" class="form-control"><%= profile.bio ? profile.bio : ''  %></textarea>
    </div>
    <div class="form-group col-md-2">
      <label for="property-included" class="control-label"><%= i18nProperty.form.included %></label>
      <label for="property-electricity" class="checkbox">
        <input type="checkbox" name="property[electricity]" id="property-electricity" <%= property.electricity ? checked="checked" : '' %>><%= i18nProperty.fields.electricity %>
