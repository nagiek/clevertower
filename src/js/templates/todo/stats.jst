<footer id="footer">
  <span id="todo-count">
    <strong><%= remaining %></strong> 
    <%= remaining == 1 ? 'item' : 'items' %> left
  </span>
  <ul id="filters">
    <li><a id="all" class="selected">All</a></li>
    <li><a id="active">Active</a></li>
    <li><a id="completed">Completed</a></li>
  </ul>
  <button id="clear-completed">Clear completed (<%= done %>)</button>
</footer>
